{
    "plugins": [
    ],
    "ecmaFeatures": {
        "restParams": true
    },
    "env": {
        "node": true,
        "es6": true,
        "mocha": true
    },
    "rules":{
        "indent": 2,
        "brace-style": [2, "1tbs"],
        "camelcase": [2, { "properties": "never" }],
        "comma-style": [2, "last"],
        "default-case": 2,
        "func-style": [2, "declaration"],
        "guard-for-in": 2,
        "new-cap": 0,
        "no-alert": 0,
        "no-extra-boolean-cast": 0,
        "no-floating-decimal": 2,
        "no-nested-ternary": 2,
        "no-undefined": 2,
        "no-underscore-dangle": 0,
        "quotes": [1, "single"],
        "radix": 2,
        "space-after-function-name": [2, "never"],
        "space-after-keywords": [0, "always"],
        "space-before-blocks": [2, "never"],
        "spaced-line-comment": [2, "always", { "exceptions": ["-"]}],
        "strict": [2, "global"],
        "valid-jsdoc": [2, { "prefer": { "return": "returns"}}],
        "wrap-iife": 2
    },
    "globals": {
        "after": true,
        "afterEach": true,
        "before": true,
        "beforeEach": true,
        "describe": true,
        "it": true
    }
}
